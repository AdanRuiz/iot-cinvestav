	<persistence-unit name="SmartCitiesCloudSQL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>mx.cinvestav.gdl.iot.webpage.dao.Controller</class>
		<class>mx.cinvestav.gdl.iot.webpage.dao.SmartThing</class>
		<class>mx.cinvestav.gdl.iot.webpage.dao.ControllerProperty</class>
		<class>mx.cinvestav.gdl.iot.webpage.dao.Sensor</class>
		<class>mx.cinvestav.gdl.iot.webpage.dao.Measure</class>
		<class>mx.cinvestav.gdl.iot.webpage.dao.SensorProperty</class>
		<class>mx.cinvestav.gdl.iot.webpage.dao.SmartThingProperty</class>

		<properties>
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
		</properties>

	</persistence-unit>

</persistence>
